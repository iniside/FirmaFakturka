<Window x:Class="FirmaFakturka.Faktury.AddClientFromList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddClientFromList" Height="300" Width="300">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30">
                </RowDefinition>
            </Grid.RowDefinitions>
            <DataGrid x:Name="ListOfClients" Grid.Column="0" Grid.Row="0" Height="auto" AutoGenerateColumns="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Button  Grid.Column="0" Grid.Row="0" Content="Dodaj" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Bottom" Width="75"/>
                <Button Grid.Column="1" Grid.Row="0" Content="Anuluj" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Bottom" Width="75"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
